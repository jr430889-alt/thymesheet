{
  "name": "thymesheet",
  "version": "2.1.8",
  "description": "ThymeSheet - Professional time tracking for consultants",
  "main": "main.js",
  "author": "Jeremy",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win --x64",
    "dist": "set CSC_IDENTITY_AUTO_DISCOVERY=false && electron-builder --win --x64",
    "dist-signed": "electron-builder --win --x64",
    "publish": "set GH_TOKEN=%GH_TOKEN% && set CSC_IDENTITY_AUTO_DISCOVERY=false && electron-builder --win --x64 --publish always",
    "publish-signed": "set GH_TOKEN=%GH_TOKEN% && electron-builder --win --x64 --publish always"
  },
  "build": {
    "appId": "com.jeremy.thymesheet",
    "productName": "ThymeSheet",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "Jeremy-Time-Tracker.html",
      "logo.png",
      "icon.ico",
      "icon-hq.ico",
      "package.json",
      "license-key-pool.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "icon-hq.ico",
      "certificateFile": "certs/certificate.pfx",
      "certificatePassword": "",
      "signingHashAlgorithms": ["sha256"],
      "signDlls": true
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "ThymeSheet",
      "installerIcon": "icon-hq.ico",
      "uninstallerIcon": "icon-hq.ico",
      "artifactName": "${productName}-Setup-${version}.exe"
    },
    "publish": {
      "provider": "github",
      "owner": "jr430889-alt",
      "repo": "thymesheet"
    }
  },
  "devDependencies": {
    "electron": "^32.0.0",
    "electron-builder": "^25.0.0"
  },
  "dependencies": {
    "electron-updater": "^6.6.2",
    "exceljs": "^4.4.0"
  }
}
